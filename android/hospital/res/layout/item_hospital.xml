<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <ImageView 
        android:id="@+id/logo_hospital_iv"
        android:layout_width="@dimen/logo_item_iv"
        android:layout_height="@dimen/logo_item_iv"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    
    <TextView 
        android:id="@+id/level_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:text="甲级"
        android:textSize="@dimen/level_hospital_tv"
        android:textColor="@color/main_top_color"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/logo_hospital_iv"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="2dp"
        />
    
    <TextView 
        android:id="@+id/name_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:maxEms="10"
        android:text="北京口腔医院"
        android:textSize="@dimen/name_hospital_tv"
        android:textColor="@color/name_hospital_color"
        android:layout_toRightOf="@id/logo_hospital_iv"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        />
    
    <LinearLayout 
        android:id="@+id/public_praise_base_hospital_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:layout_toRightOf="@id/level_hospital_tv"
        android:layout_below="@id/name_hospital_tv"
        >
        
    <ImageView 
        android:id="@+id/public_praise_hospital_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        
        />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/environment_base_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:text="环境 ： "
        android:textSize="@dimen/environment_hospital_tv"
        android:textColor="@color/environment_hospital_color"
        android:layout_toRightOf="@id/public_praise_base_hospital_iv"
        android:layout_below="@id/name_hospital_tv"
        android:gravity="center"
        />
    
    <TextView 
        android:id="@+id/environment_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:text="优美"
        android:textSize="@dimen/environment_hospital_tv"
        android:textColor="@color/environment_hospital_color"
        android:layout_toRightOf="@id/environment_base_hospital_tv"
        android:layout_below="@id/name_hospital_tv"
        android:gravity="center"
        />
    
    <TextView 
        android:id="@+id/facility_base_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:text="设施信息 ： "
        android:textSize="@dimen/environment_hospital_tv"
        android:textColor="@color/facility_hospital_color"
        android:layout_toRightOf="@id/environment_hospital_tv"
        android:layout_below="@id/name_hospital_tv"
        android:paddingLeft="10dp"
        android:gravity="center"
        />
    
    <TextView 
        android:id="@+id/facility_hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_item_iv"
        android:text="先进"
        android:textSize="@dimen/environment_hospital_tv"
        android:textColor="@color/facility_hospital_color"
        android:layout_toRightOf="@id/facility_base_hospital_tv"
        android:layout_below="@id/name_hospital_tv"
        android:gravity="center"
        />

</RelativeLayout>
