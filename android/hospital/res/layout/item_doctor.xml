<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
	<TextView 
	    android:id="@+id/name_doctor_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="name"
	    android:textSize="@dimen/main_top_text"
        android:textColor="@color/main_top_color"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
	    />
	
	<TextView 
	    android:id="@+id/job_doctor_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="job"
	    android:textSize="@dimen/main_top_text"
        android:textColor="@color/main_top_color"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name_doctor_tv"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
	    />
	
	 <LinearLayout
	     android:id="@+id/evaluate_doctor_ll"
	     android:layout_width="wrap_content"
	     android:layout_height="@dimen/logo_item_iv"
	     android:layout_below="@id/name_doctor_tv"
	     android:layout_toRightOf="@id/job_doctor_tv" >

	     <ImageView
	         android:id="@+id/evaluate_doctor_iv"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:src="@drawable/ic_launcher" />
	 </LinearLayout>
	 
	 <ImageView 
	     android:id="@+id/photo_doctor_iv"
	     android:layout_width="@dimen/doctor_office_iv"
	     android:layout_height="@dimen/doctor_office_iv"
	     android:src="@drawable/ic_launcher"
	     android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
	     />
    
</RelativeLayout>
